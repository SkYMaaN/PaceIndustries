@page "/customer"
@inherits LayoutComponentBase

<AuthorizeView Roles="customer">
    <Authorized>
        <MudAppBar Elevation="1" Style="background-color: white;">
            <MudGrid>
                <MudItem xs="3">
                    <MudImage Src="Images/Logos/Logo.png" Height="60" Style="margin-top: 18px;" />
                </MudItem>
                <MudItem xs="8">
                    <MudText Style="margin-top: 20px; color: black;" Typo="Typo.h3" Align="Align.Center" Class="mb-4">Current Sales Orders</MudText>
                </MudItem>
            </MudGrid>
        </MudAppBar>

        <MudDrawer Open="true" Width="350px;" ClipMode="DrawerClipMode.Always" Elevation="2" Style="background-color: lightgray;">
            <MudText Style="font-size: large; font-weight: bolder; margin-top: 10px; margin-bottom: 10px; margin-left: 28px;">Hello, @context.User.Identity.Name</MudText>

            <PaceIndustries.Components.Pages.Customer.CustomerNavBar />
        </MudDrawer>

        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </Authorized>
    <NotAuthorized>
        <PaceIndustries.Components.Pages.Customer.Login />
    </NotAuthorized>
</AuthorizeView>